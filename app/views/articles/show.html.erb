<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= button_to "Destroy", article_path(@article),
                  method: :delete %></li>
</ul>
<h2>Comments</h2>

<%= render @article.comments, locals: {commentable: @article} %>

<h2>Add a comment:</h2>
<%= render partial: "comments/form", locals: {commentable: @article} %>
