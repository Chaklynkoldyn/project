<h1><%= @blog.title %></h1>

<p><%= @blog.body %></p>

<ul>
  <li><%= link_to "Edit", edit_blog_path(@blog) %></li>
  <li><%= button_to "Destroy", blog_path(@blog),
                  method: :delete %></li>
</ul>

<h2>Comments</h2>

<%= render @blog.comments, locals: {commentable: @blog} %>

<h2>Add a comment:</h2>

<%= render partial: "comments/form", locals: {commentable: @blog} %>
